{
	"name": "UPchieve",
	"description": "UPchieve mobile client",
	"version": "v1.0.0",
	"private": false,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "cross-env-shell jest",
		"android": "react-native run-android --variant=Debug",
		"lint": "cross-env-shell tslint --project ./tsconfig.json",
		"lint:fix": "cross-env-shell tslint --fix --project ./tsconfig.json"
	},
	"dependencies": {
		"@react-native-community/async-storage": "^1.5.1",
		"@types/styled-components": "^4.1.17",
		"axios": "^0.19.0",
		"formik": "^1.5.7",
		"native-base": "^2.12.1",
		"react": "^16.8.6",
		"react-native": "^0.59.5",
		"react-native-hamburger": "0.0.2",
		"react-native-modal-selector": "^1.0.3",
		"react-native-navigation": "^2.18.3",
		"react-redux": "^7.0.3",
		"redux": "^4.0.1",
		"redux-logger": "^3.0.6",
		"redux-persist": "^5.10.0",
		"redux-thunk": "^2.3.0",
		"styled-components": "^4.3.2",
		"styled-is": "^1.3.0",
		"yup": "^0.27.0"
	},
	"license": "MIT",
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "^7.3.0",
		"@babel/preset-env": "^7.3.1",
		"@types/jest": "^23.3.13",
		"@types/react": "^16.7.21",
		"@types/react-native": "^0.57.32",
		"@types/react-redux": "^7.0.1",
		"@types/react-test-renderer": "^16.0.3",
		"@types/redux-logger": "^3.0.6",
		"babel-core": "^7.0.0-bridge.0",
		"babel-eslint": "^10.0.1",
		"babel-jest": "24.0.0",
		"babel-preset-airbnb": "^3.2.0",
		"babel-preset-react-native": "^4.0.1",
		"cross-env": "^5.2.0",
		"eslint": "^5.16.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jest": "^22.1.2",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-react": "^7.12.2",
		"eslint-watch": "^4.0.2",
		"jest": "^24.7.1",
		"metro-react-native-babel-preset": "^0.51.1",
		"react-addons-test-utils": "^15.6.2",
		"react-native-typescript-transformer": "^1.2.11",
		"react-test-renderer": "16.6.3",
		"regenerator-runtime": "^0.13.1",
		"ts-jest": "^23.10.5",
		"tslint": "^5.16.0",
		"tslint-config-airbnb": "^5.11.1",
		"typescript": "^3.4.5"
	},
	"jest": {
		"preset": "react-native",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
			"\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"testPathIgnorePatterns": [
			"\\.snap$",
			"<rootDir>/node_modules/"
		],
		"collectCoverageFrom": [
			"src/**/*.{js,jsx}",
			"!**/node_modules/**",
			"!ios/**",
			"!android/**"
		],
		"cacheDirectory": ".jest/cache"
	},
	"engines": {
		"node": "11.7.0",
		"npm": ">=6.0.0",
		"yarn": ">=1.9.2"
	},
	"rnpm": {
		"assets": [
			"./src/view/assets/fonts/"
		]
	}
}
